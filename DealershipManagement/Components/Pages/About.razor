@page "/about"

<PageTitle>About Us - Dealership Management</PageTitle>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="hero-title">About MA Cars</h1>
                    <p class="hero-subtitle">Your trusted partner in automotive excellence since 1995</p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number">25+</span>
                            <span class="stat-label">Years of Excellence</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">10,000+</span>
