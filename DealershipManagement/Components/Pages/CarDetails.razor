@page "/car/{Id}"

<PageTitle>Car Details - Dealership Management</PageTitle>

@if (car == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <!-- Breadcrumb Navigation -->
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-light rounded p-3">
                        <li class="breadcrumb-item">
                            <a href="/cars" class="text-decoration-none">
                                <span class="oi oi-list me-1"></span>Cars
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @car.Year @car.Make @car.Model
                        </li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <!-- Main Content - Left Side -->
            <div class="col-lg-8">
                <!-- Car Information Card -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <span class="oi oi-car-front me-2"></span>
                            Vehicle Information
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row g-3">
                                    <dt class="col-sm-4 fw-semibold text-muted">VIN:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.VIN</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Stock #:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.StockNumber</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Make:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.Make</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Model:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.Model</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Year:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.Year</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row g-3">
                                    <dt class="col-sm-4 fw-semibold text-muted">Status:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge @(car.IsSold ? "bg-success" : "bg-primary") fs-6 px-3 py-2">
                                            <span class="oi @(car.IsSold ? "oi-check" : "oi-clock") me-1"></span>
                                            @car.Status
                                        </span>
                                    </dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Buy Price:</dt>
                                    <dd class="col-sm-8 fw-bold text-success">@car.BuyPrice.ToString("C")</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Tax:</dt>
                                    <dd class="col-sm-8 fw-bold">@car.Tax.ToString("C")</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Final Buy Price:</dt>
                                    <dd class="col-sm-8 fw-bold text-primary">@car.FinalBuyPrice.ToString("C")</dd>

                                    <dt class="col-sm-4 fw-semibold text-muted">Buy Date:</dt>
                                    <dd class="col-sm-8 fw-bold">@(car.BuyDate?.ToString("MMM dd, yyyy") ?? "Not set")</dd>
                                </dl>
                            </div>
                        </div>

                        @if (car.IsSold)
                        {
                            <hr class="my-4" />
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row g-3">
                                        <dt class="col-sm-4 fw-semibold text-muted">Sell Price:</dt>
                                        <dd class="col-sm-8 fw-bold text-success">@car.SellPrice.ToString("C")</dd>

                                        <dt class="col-sm-4 fw-semibold text-muted">Final Sell Price:</dt>
                                        <dd class="col-sm-8 fw-bold text-primary">@car.FinalSellPrice.ToString("C")</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row g-3">
                                        <dt class="col-sm-4 fw-semibold text-muted">Sell Date:</dt>
                                        <dd class="col-sm-8 fw-bold">@car.SellDate?.ToString("MMM dd, yyyy")</dd>

                                        <dt class="col-sm-4 fw-semibold text-muted">Profit:</dt>
                                        <dd class="col-sm-8 fw-bold @(car.FinalSellPrice > car.FinalBuyPrice ? "text-success" : "text-danger")">
                                            <span class="oi @(car.FinalSellPrice > car.FinalBuyPrice ? "oi-arrow-up" : "oi-arrow-down") me-1"></span>
                                            @((car.FinalSellPrice - car.FinalBuyPrice).ToString("C"))
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions Sidebar - Right Side -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 2rem;">
                    <!-- Primary Actions Card -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-body p-3">
                            <div class="d-grid gap-3">
                                <a href="/car/@car.Id/edit" class="btn btn-primary btn">
                                    <span class="oi oi-pencil me-2"></span>
                                    Edit Vehicle
                                </a>
                                @if (!car.IsSold)
                                {
                                    <a href="/car/@car.Id/sell" class="btn btn-success btn">
                                        <span class="oi oi-dollar me-2"></span>
                                        Mark as Sold
                                    </a>
                                }
                                <button class="btn btn-danger btn" @onclick="DeleteCar">
                                    <span class="oi oi-trash me-2"></span>
                                    Delete Vehicle
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Vehicle Summary Card -->
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">
                                <span class="oi oi-info me-2"></span>
                                Summary
                            </h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Total Maintenance:</span>
                                <span class="fw-bold">@car.MaintenanceLogs.Count() logs</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Total Spent:</span>
                                <span class="fw-bold text-danger">
                                    @car.MaintenanceLogs.Sum(l => l.FinalPrice).ToString("C")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Status:</span>
                                <span class="badge @(car.IsSold ? "bg-success" : "bg-primary")">
                                    @car.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Maintenance Logs Section - Full Width Below Both Columns -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <span class="oi oi-wrench me-2"></span>
                            Maintenance Logs
                        </h5>
                        @if (!car.IsSold)
                        {
                            <button class="btn btn-light btn-sm" @onclick="ShowAddMaintenanceModal">
                                <span class="oi oi-plus me-1"></span> Add Log
                            </button>
                        }
                    </div>
                    <div class="card-body p-0">
                        @if (!car.MaintenanceLogs.Any())
                        {
                            <div class="text-center py-5">
                                <span class="oi oi-wrench display-4 text-muted"></span>
                                <p class="text-muted mt-3">No maintenance logs found</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="border-0">Date</th>
                                            <th class="border-0">Part #</th>
                                            <th class="border-0">Description</th>
                                            <th class="border-0">Shop Name</th>
                                            <th class="border-0">Price</th>
                                            <th class="border-0">Final Price</th>
                                            <th class="border-0">Invoice</th>
                                            <th class="border-0">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var log in car.MaintenanceLogs.OrderByDescending(l => l.Date))
                                        {
                                            <tr>
                                                <td class="fw-semibold">@log.Date.ToString("MMM dd, yyyy")</td>
                                                <td><code>@log.PartNumber</code></td>
                                                <td>@log.PartDescription</td>
                                                <td>@log.ShopName</td>
                                                <td class="text-success">@log.Price.ToString("C")</td>
                                                <td class="fw-bold text-primary">@log.FinalPrice.ToString("C")</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(log.InvoiceFilePath))
                                                    {
                                                        <button class="btn btn-sm btn-outline-info" @onclick="() => DownloadInvoice(log.InvoiceFilePath)">
                                                            <span class="oi oi-document me-1"></span> Download
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No invoice</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!car.IsSold)
                                                    {
                                                        <div class="btn-group btn-group-sm" role="group">
                                                            <button class="btn btn-outline-secondary" @onclick="() => EditMaintenanceLog(log)">
                                                                Edit
                                                            </button>
                                                            <button class="btn btn-outline-danger" @onclick="() => DeleteMaintenanceLog(log.Id)">
                                                                Delete
                                                            </button>
                                                        </div>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (showAddMaintenanceModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Maintenance Log</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddMaintenanceModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newMaintenanceLog" OnValidSubmit="HandleAddMaintenanceSubmit">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="partNumber" class="form-label">Part Number *</label>
                                <InputText id="partNumber" class="form-control" @bind-Value="newMaintenanceLog.PartNumber" />
                                <ValidationMessage For="@(() => newMaintenanceLog.PartNumber)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="partDescription" class="form-label">Description *</label>
                                <InputText id="partDescription" class="form-control" @bind-Value="newMaintenanceLog.PartDescription" />
                                <ValidationMessage For="@(() => newMaintenanceLog.PartDescription)" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="shopName" class="form-label">Shop Name *</label>
                                <InputSelect id="shopName" class="form-control" @bind-Value="newMaintenanceLog.ShopName">
                                    <option value="">Select a shop...</option>
                                    @foreach (var shopName in shopNames)
                                    {
                                        <option value="@shopName">@shopName</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => newMaintenanceLog.ShopName)" />
                                <small class="form-text text-muted">Choose from the list or select "Other" for custom shops</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">Price *</label>
                                <InputNumber id="price" class="form-control" @bind-Value="newMaintenanceLog.Price" />
                                <ValidationMessage For="@(() => newMaintenanceLog.Price)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="date" class="form-label">Date *</label>
                                <InputDate id="date" class="form-control" @bind-Value="newMaintenanceLog.Date" />
                                <ValidationMessage For="@(() => newMaintenanceLog.Date)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="invoiceFile" class="form-label">Invoice File</label>
                            <InputFile id="invoiceFile" class="form-control" OnChange="HandleInvoiceFileChange" />
                            <small class="form-text text-muted">Max file size: @(FileService.GetMaxFileSize() / (1024 * 1024))MB</small>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseAddMaintenanceModal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add Log</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}
