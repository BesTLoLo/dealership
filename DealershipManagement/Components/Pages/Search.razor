@page "/search"


<PageTitle>Search - Dealership Management</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Search Cars</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <InputText class="form-control" Placeholder="Search by VIN, Stock #, Make, Model, or Year..." 
                           @bind-Value="searchFilters.SearchTerm" @onkeyup="HandleSearch" />
                <button class="btn btn-primary" @onclick="PerformSearch">
                    <span class="oi oi-magnifying-glass"></span> Search
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn btn-outline-secondary" @onclick="ShowAdvancedFilters">
                <span class="oi oi-filter"></span> Advanced Filters
            </button>
        </div>
    </div>

    @if (showAdvancedFilters)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Advanced Filters</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="status" class="form-label">Status</label>
                                <InputSelect id="status" class="form-control" @bind-Value="searchFilters.Status">
                                    <option value="">All</option>
                                    <option value="Available">Available</option>
                                    <option value="Sold">Sold</option>
                                </InputSelect>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="make" class="form-label">Make</label>
                                <InputText id="make" class="form-control" @bind-Value="searchFilters.Make" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="model" class="form-label">Model</label>
                                <InputText id="model" class="form-control" @bind-Value="searchFilters.Model" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="year" class="form-label">Year</label>
                                <InputNumber id="year" class="form-control" @bind-Value="searchFilters.Year" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <InputDate id="startDate" class="form-control" @bind-Value="searchFilters.StartDate" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <InputDate id="endDate" class="form-control" @bind-Value="searchFilters.EndDate" />
                            </div>
                        </div>
                        <div class="text-end">
                            <button class="btn btn-primary" @onclick="PerformSearch">Apply Filters</button>
                            <button class="btn btn-outline-secondary ms-2" @onclick="ClearFilters">Clear Filters</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (searchResults == null && !hasSearched)
    {
        <div class="text-center text-muted">
            <p>Enter search criteria above to find cars</p>
        </div>
    }
    else if (searchResults == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Searching...</span>
            </div>
        </div>
    }
    else if (!searchResults.Any())
    {
        <div class="text-center text-muted">
            <p>No cars found matching your search criteria</p>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col">
                <p class="text-muted">Found @totalCount cars</p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>VIN</th>
                        <th>Stock #</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Status</th>
                        <th>Buy Price</th>
                        <th>Sell Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in searchResults)
                    {
                        <tr>
                            <td>@car.VIN</td>
                            <td>@car.StockNumber</td>
                            <td>@car.Make</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td>
                                <span class="badge @(car.IsSold ? "bg-success" : "bg-primary")">
                                    @car.Status
                                </span>
                            </td>
                            <td>@car.FinalBuyPrice.ToString("C")</td>
                            <td>@(car.IsSold ? car.FinalSellPrice.ToString("C") : "-")</td>
                            <td>
                                <a href="/car/@car.Id" class="btn btn-sm btn-outline-primary">
                                    <span class="oi oi-eye"></span> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Search results pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(searchFilters.Page == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(searchFilters.Page - 1)" 
                                disabled="@(searchFilters.Page == 1)">Previous</button>
                    </li>
                    @for (int i = Math.Max(1, searchFilters.Page - 2); i <= Math.Min(totalPages, searchFilters.Page + 2); i++)
                    {
                        <li class="page-item @(i == searchFilters.Page ? "active" : "")">
                            <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                        </li>
                    }
                    <li class="page-item @(searchFilters.Page == totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(searchFilters.Page + 1)" 
                                disabled="@(searchFilters.Page == totalPages)">Next</button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
