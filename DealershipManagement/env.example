# MongoDB Configuration
# Copy this file to .env and update the values as needed

# MongoDB Connection String
MONGODB_CONNECTION_STRING=mongodb://localhost:27017

# Database Name
MONGODB_DATABASE_NAME=DealershipDB

# Collection Names (optional - these have defaults)
MONGODB_CARS_COLLECTION=Cars
MONGODB_INVOICES_COLLECTION=Invoices

# Example for remote MongoDB:
# MONGODB_CONNECTION_STRING=mongodb://username:password@hostname:port/database
# MONGODB_DATABASE_NAME=YourDatabaseName
